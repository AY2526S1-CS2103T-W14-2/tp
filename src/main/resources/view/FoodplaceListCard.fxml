<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="150" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
    </columnConstraints>

      <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
        <padding>
          <Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <HBox spacing="0.5" alignment="CENTER_LEFT">
          <Label fx:id="id" styleClass="cell_big_label">
            <minWidth>
              <!-- Ensures that the label text is never truncated -->
              <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
          </Label>
          <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        </HBox>
        <FlowPane fx:id="tags" />
        <Label fx:id="timing" styleClass="cell_small_label" text="\$timing" />
        <Label fx:id="cuisine" styleClass="cell_small_label" text="\$cuisine" />
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
        <Label fx:id="note" styleClass="cell_small_label" text="\$note" wrapText="true" />
        <Label fx:id="rate" styleClass="cell_small_label" text="\$rate" />
      </VBox>
      <VBox alignment="TOP_RIGHT" GridPane.columnIndex="1" spacing="5">
          <padding>
              <Insets top="10" right="10" bottom="10" left="5" />
          </padding>
          <ImageView fx:id="pinIcon"
                     fitHeight="18"
                     fitWidth="18"
                     visible="false" />
          <Region VBox.vgrow="ALWAYS" />
          <StackPane alignment="BOTTOM_RIGHT">
              <Label fx:id="blacklist" styleClass="cell_small_label" text="\$blacklist" />
              <Label fx:id="wishlist" styleClass="cell_small_label" text="\$wishlist" />
          </StackPane>
      </VBox>
    </GridPane>
</HBox>
